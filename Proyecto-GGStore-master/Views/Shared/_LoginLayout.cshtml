@{
    Layout = null;  // Desactiva el layout principal para esta página
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GG Store</title>

    <!-- Fuente moderna: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Estilo personalizado para la página de login y registro */
        body {
            background-image: url('/images/fondo-login.png'); /* Ruta de la imagen de fondo */
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Poppins', sans-serif; /* Usamos la fuente Poppins */
            color: #333;
            margin: 0;
            padding: 0;
            height: 100vh; /* Asegura que el fondo cubra toda la ventana */
            position: relative; /* Para los elementos con posicionamiento absoluto */
        }

        /* Contenedor del formulario */
        .container {
            position: absolute;
            top: 50%; /* Centrado vertical */
            right: 20px; /* Mueve el formulario a la derecha */
            transform: translateY(-50%); /* Centrado vertical con transformación */
            max-width: 500px;
            padding: 30px;
            background-color: #fff; /* Fondo blanco puro */
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 25px;
            padding: 10px;
            margin-bottom: 15px; /* Separación entre los campos del formulario */
        }

        .btn {
            background-color: #9b1b30;
            color: white;
            border-radius: 25px;
            padding: 10px 20px;
            width: 100%;
            font-size: 16px;
            margin-bottom: 15px; /* Separación entre el botón y otros elementos */
        }

        .btn:hover {
            background-color: #cc4d62;
        }

        .text-center {
            margin-bottom: 20px;
        }

        .login-title {
            text-align: left;
            color: rgb(255, 255, 255);
            font-weight: 600;
            font-size: 10rem; /* Aumentamos el tamaño */
            margin-bottom: 10px;
            position: absolute;
            top: 35%; /* Lo bajamos un poco */
            left: 20px;
        }

        /* Estilos para el logo */
        .logo {
            position: absolute;
            top: 20px; /* Coloca el logo 20px desde la parte superior */
            left: 20px; /* Coloca el logo 20px desde la parte izquierda */
            width: 200px; /* Ajusta el tamaño del logo */
            cursor: pointer; /* Cursor de mano para indicar que es clickeable */
        }

        .google-btn {
            background-color: #db4437; /* Rojo de Google */
            color: white;
            border-radius: 25px;
            padding: 10px;
            font-size: 16px;
            width: 100%;
            margin-top: 10px;
        }

        .google-btn:hover {
            background-color: #cc3c2f; /* Cambio de color al pasar el cursor */
        }

        /* Estilo de los enlaces debajo del formulario */
        .footer-links {
            text-align: center;
            margin-top: 20px;
        }

        .footer-links a {
            color: #9b1b30;
            text-decoration: none;
        }

        .footer-links a:hover {
            text-decoration: underline;
        }

        /* Mensaje de bienvenida fuera del formulario */
        .welcome-message {
            position: absolute;
            top: 65%; /* Lo posicionamos un poco más abajo del "¡HOLA!" */
            left: 20px; /* Centrado a la izquierda */
            font-size: 1.5rem; /* Aumentamos el tamaño */
            color: #fff;
            font-weight: 600;
        }

        .welcome-message2 {
            position: absolute;
            top: 70%; /* Lo posicionamos un poco más abajo del "¡HOLA!" */
            left: 20px; /* Centrado a la izquierda */
            font-size: 1.5rem; /* Aumentamos el tamaño */
            color: #fff;
            font-weight: 600;
        }

    </style>
</head>

<body>
    <!-- Logo fuera del formulario, en la parte superior izquierda -->
    <a href="/"> <!-- Enlace para redirigir al home -->
        <img src="~/images/11.png" alt="GG Store" class="logo" />
    </a>

    <!-- Título "¡HOLA!" fuera del formulario, justo encima del mensaje de bienvenida -->
    <h2 class="login-title">¡HOLA!</h2>

    <!-- Mensaje de bienvenida centrado a la izquierda, fuera del formulario -->
    <p class="welcome-message">BIENVENIDO, POR FAVOR INGRESA</p>
    <p class="welcome-message2">TUS CREDENCIALES PARA CONTINUAR</p>

    <!-- Contenedor del formulario -->
    <div class="container">
        @RenderBody() <!-- Aquí se cargará el contenido de la vista (login o registro) -->

        <!-- Botón de Google -->
        <button class="google-btn">
            Iniciar sesión con Google
        </button>

        <div class="footer-links">
            <p>No tienes una cuenta? <a href="#">Crea una gratis</a></p>
        </div>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
