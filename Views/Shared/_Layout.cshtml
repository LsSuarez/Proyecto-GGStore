<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GG Store</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Font para estilo gamer -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- CSS para efectos hover -->
    <style>
        .card {
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

        .card img {
            transition: opacity 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card:hover .card-body {
            opacity: 1;
            visibility: visible;
        }

        .card-body {
            position: absolute;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            width: 100%;
            padding: 15px;
            text-align: center;
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .card-body .btn {
            background-color: #9b1b30;
            color: #fff;
        }

        .card-body .btn:hover {
            background-color: #cc4d62;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <img src="~/images/11.png" alt="GG Store" style="width: 150px; height: auto;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto" id="user-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Catálogo</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Create">Crear Orden</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Index">Órdenes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Carrito</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Checkout">Checkout</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contacto</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Registro</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Mostrar solo en Home -->
    @if (ViewData["Title"]?.ToString() == "Inicio - GG Store") {
        <!-- Banner de Ofertas -->
        <div class="container mt-4">
            <img src="~/images/2.png" class="d-block w-100" alt="Banner de Ofertas">
        </div>

        <!-- Sección de productos -->
        <div class="container mt-4">
            <div class="row">
                <!-- Producto 1 -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/images/3.png" class="card-img-top" alt="Producto 1">
                        <div class="card-body">
                            <h5 class="card-title">Silla Gamer Razer</h5>
                            <p class="card-text">Silla ergonómica para largas sesiones de juego. Ajustable y cómoda para tu mejor experiencia.</p>
                            <button class="btn">Añadir al Carrito</button>
                        </div>
                    </div>
                </div>

                <!-- Producto 2 -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/images/4.png" class="card-img-top" alt="Producto 2">
                        <div class="card-body">
                            <h5 class="card-title">Auriculares Sony</h5>
                            <p class="card-text">Auriculares con sonido de alta calidad, ideales para gamers. Comodidad y estilo en un solo producto.</p>
                            <button class="btn">Añadir al Carrito</button>
                        </div>
                    </div>
                </div>

                <!-- Producto 3 -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/images/5.png" class="card-img-top" alt="Producto 3">
                        <div class="card-body">
                            <h5 class="card-title">Controlador Xbox</h5>
                            <p class="card-text">Controlador inalámbrico de alta precisión para tus juegos favoritos. Compatible con Xbox y PC.</p>
                            <button class="btn">Añadir al Carrito</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- CONTENIDO DE VISTAS -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 text-muted">
        <p>&copy; 2025 - GG Store - Powered by ASP.NET Core</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <!-- Script: Mostrar usuario logueado -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const user = localStorage.getItem("gg_logged");
            if (user) {
                const nav = document.getElementById("user-nav");

                // Ocultar Login/Registro
                nav.querySelectorAll('a[asp-action="Login"], a[asp-action="Register"]').forEach(link => {
                    link.parentElement.remove();
                });

                // Agregar saludo y Logout
                nav.innerHTML += `
                    <li class="nav-item">
                        <a class="nav-link disabled">Hola, ${user}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="logout()">Logout</a>
                    </li>
                `;
            }
        });

        function logout() {
            localStorage.removeItem("gg_logged");
            window.location.reload();
        }
    </script>
</body>
</html>