@model GGStoreProyecto.Models.Product

@{
    ViewData["Title"] = "Agregar Producto";
}

<h2>@ViewData["Title"]</h2>

<!-- Mostrar mensajes de error si los hay -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Add" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Nombre del producto" value="@Model.Name" />
        <label for="Name">Nombre</label>
    </div>
    
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Description" name="Description" placeholder="Descripción del producto" value="@Model.Description" />
        <label for="Description">Descripción</label>
    </div>
    
    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="Price" name="Price" placeholder="Precio" value="@Model.Price" />
        <label for="Price">Precio</label>
    </div>
    
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="URL de la imagen" value="@Model.ImageUrl" />
        <label for="ImageUrl">Imagen</label>
    </div>

    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>
