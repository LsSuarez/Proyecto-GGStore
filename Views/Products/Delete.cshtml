@model GGStoreProyecto.Models.Product
@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="text-danger">¿Seguro que deseas eliminar?</h2>

<div class="bg-dark p-4 rounded text-light">
    <p><strong>Nombre:</strong> @Model.Name</p>
    <p><strong>Precio:</strong> $@Model.Price</p>
    <p><strong>Descripción:</strong> @Model.Description</p>
    <img src="@Model.ImageUrl" width="100" class="rounded border" />
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
